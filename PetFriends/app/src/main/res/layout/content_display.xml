<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_display"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.gocztiti.petfriends.Display"
    tools:showIn="@layout/activity_display">

    <Button
        android:text="Pets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="81dp"
        android:id="@+id/pet"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClick" />

    <Button
        android:text="Guides"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/food"
        android:layout_toEndOf="@+id/food"
        android:layout_marginBottom="55dp"
        android:id="@+id/guide" />

    <Button
        android:text="ACCESSORIES"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/acc"
        android:layout_above="@+id/guide"
        android:layout_toRightOf="@+id/guide"
        android:layout_toEndOf="@+id/guide"
        android:layout_marginBottom="61dp" />

    <Button
        android:text="Food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/food"
        android:layout_alignBaseline="@+id/acc"
        android:layout_alignBottom="@+id/acc"
        android:layout_toLeftOf="@+id/pet"
        android:layout_toStartOf="@+id/pet" />

</RelativeLayout>
